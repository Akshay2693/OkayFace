<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detect_new_user_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_column="2"
    android:layout_row="4"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/profile_head_image"
        android:layout_rowSpan="4"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_width="150dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text="@string/detect_new_user"
        android:singleLine="false"
        android:textSize="15sp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="left|bottom"
        android:gravity="left" />

    <EditText
        android:id="@+id/username_editview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:visibility="visible"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="left|bottom"
        android:gravity="left" />

    <Button
        android:id="@+id/profile_head_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/new_user_btn"
        android:text="чбошод"
        android:focusable="true"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="left|bottom"
        />

</GridLayout>
